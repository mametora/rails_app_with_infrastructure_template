[
  {
    "name": "${app}-${workspace}-rails",
    "image": "${aws_account_id}.dkr.ecr.ap-northeast-1.amazonaws.com/${app}-${workspace}-rails:latest",
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "${region}",
        "awslogs-group": "${log_group}",
        "awslogs-stream-prefix": "rails"
      }
    },
    "command": [
      "bundle",
      "exec",
      "puma",
      "-C",
      "config/puma.rb"
    ],
    "secrets": [
      {
        "name": "RAILS_MASTER_KEY",
        "valueFrom": "/${workspace}/rails/master_key"
      },
      {
        "name": "WEB_HOST",
        "valueFrom": "/${workspace}/web_host"
      },
      {
        "name": "DB_HOST",
        "valueFrom": "/${workspace}/db/host"
      },
      {
        "name": "DB_USER",
        "valueFrom": "/${workspace}/db/user"
      },
      {
        "name": "DB_PASSWORD",
        "valueFrom": "/${workspace}/db/password"
      },
      {
        "name": "KVS_HOST",
        "valueFrom": "/${workspace}/kvs/host"
      },
      {
        "name": "BUCKET",
        "valueFrom": "/${workspace}/bucket"
      }
    ],
    "environment": [
      {
        "name": "RAILS_ENV",
        "value": "production"
      },
      {
        "name": "RAILS_SERVE_STATIC_FILES",
        "value": "true"
      },
      {
        "name": "RAILS_LOG_TO_STDOUT",
        "value": "true"
      },
      {
        "name": "AWS_REGION",
        "value": "${region}"
      },
      {
        "name": "PORT",
        "value": "80"
      }
    ],
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": 80
      }
    ]
  }
]
